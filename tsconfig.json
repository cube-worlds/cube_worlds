{
    "compilerOptions": {
        "target": "ES2021",
        "experimentalDecorators": true,
        "rootDir": ".",
        "module": "ES2022",
        "moduleResolution": "Node10",
        "paths": {
            "#root/*": ["./src/*"]
        },
        "strict": true,
        "noEmit": true,
        "outDir": "build",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "preserveWatchOutput": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/frontend/*"]
}
