{
    "name": "cubeworlds",
    "type": "module",
    "version": "0.5.0",
    "private": true,
    "description": "Telegram bot for NFT",
    "author": "Vladimir Babin <vovababin@gmail.com>",
    "license": "MIT",
    "imports": {
        "#root/*": "./build/src/*"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "dev": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
        "tunnel": "ngrok http --domain dominant-annually-lobster.ngrok-free.app 3000",
        "build:bot": "tsc --noEmit false",
        "build:frontend": "npm --prefix src/frontend run build",
        "build:all": "npm run build:bot && npm run build:frontend",
        "update:bot": "npx npm-check-updates -u && npm install",
        "update:frontend": "cd src/frontend && npx npm-check-updates -u && npm install",
        "update:all": "npm run update:bot && npm run update:frontend",
        "prepare": "npx husky",
        "lint": "eslint . --ignore-pattern .github/",
        "format": "eslint . --fix --ignore-pattern .github/",
        "start": "tsc && tsx ./src/main.ts",
        "start:force": "tsx ./src/main.ts",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@fastify/middie": "^9.0.3",
        "@fastify/static": "^8.3.0",
        "@grammyjs/auto-chat-action": "0.1.1",
        "@grammyjs/auto-retry": "^2.0.2",
        "@grammyjs/hydrate": "^1.6.0",
        "@grammyjs/i18n": "1.1.2",
        "@grammyjs/menu": "^1.3.1",
        "@grammyjs/parse-mode": "2.2.0",
        "@grammyjs/types": "3.22.2",
        "@pinata/sdk": "^2.1.0",
        "@telegram-apps/init-data-node": "^2.0.10",
        "@ton/core": "^0.62.0",
        "@ton/crypto": "^3.3.0",
        "@ton/ton": "^16.1.0",
        "@tonconnect/sdk": "^3.3.1",
        "@typegoose/typegoose": "^12.20.0",
        "@types/node-rsa": "^1.1.4",
        "axios": "^1.13.2",
        "callback-data": "1.1.1",
        "chatgpt": "^5.2.5",
        "dotenv": "17.2.3",
        "fastify": "5.6.2",
        "form-data": "^4.0.5",
        "grammy": "1.38.4",
        "grammy-guard": "0.5.0",
        "iso-639-1": "3.1.5",
        "markdown-table-ts": "^1.0.3",
        "mongoose": "<9.0.0",
        "node-fetch": "^3.3.2",
        "node-graceful-shutdown": "1.1.5",
        "node-rsa": "^1.1.1",
        "pino": "10.1.0",
        "pino-pretty": "13.1.3",
        "sharp": "^0.34.5",
        "tonweb": "^0.0.66",
        "tsx": "4.21.0",
        "znv": "0.5.0",
        "zod": "^3.24"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.4.1",
        "@types/node": "24.10.1",
        "eslint": "^9.39.1",
        "eslint-plugin-vue": "^10.6.2",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "prettier": "3.7.4",
        "prettier-plugin-organize-imports": "4.3.0",
        "tsc-watch": "7.2.0",
        "typescript": "5.9.3",
        "vite": "^7.2.6"
    },
    "lint-staged": {
        "*.ts": "npm run lint"
    }
}