{
  "name": "cubeworlds",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot for NFT",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "author": "Vladimir Babin <vovababin@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "tunnel": "ngrok http --domain dominant-annually-lobster.ngrok-free.app 80",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc",
    "build": "tsc --noEmit false",
    "dev": "npm --prefix src/frontend run build && tsc-watch --onSuccess \"tsx ./src/main.ts\"",
    "start": "tsc && tsx ./src/main.ts",
    "start:force": "tsx ./src/main.ts",
    "prepare": "npx husky install",
    "update": "npx npm-check-updates -u && cd src/frontend && npx npm-check-updates -u"
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@grammyjs/auto-chat-action": "0.1.1",
    "@grammyjs/auto-retry": "^2.0.2",
    "@grammyjs/hydrate": "1.4.1",
    "@grammyjs/i18n": "1.1.2",
    "@grammyjs/menu": "^1.3.0",
    "@grammyjs/parse-mode": "1.11.1",
    "@grammyjs/types": "3.19.0",
    "@pinata/sdk": "^2.1.0",
    "@telegram-apps/init-data-node": "^2.0.3",
    "@ton/core": "^0.60.1",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.2.1",
    "@typegoose/typegoose": "^12.13.0",
    "@types/node-rsa": "^1.1.4",
    "axios": "^1.8.3",
    "callback-data": "1.1.1",
    "chatgpt": "^5.2.5",
    "dotenv": "16.4.7",
    "fastify": "5.2.1",
    "form-data": "^4.0.2",
    "grammy": "1.35.0",
    "grammy-guard": "0.5.0",
    "iso-639-1": "3.1.5",
    "markdown-table-ts": "^1.0.3",
    "mongoose": "~8.17.1",
    "node-fetch": "^3.3.2",
    "node-graceful-shutdown": "1.1.5",
    "node-rsa": "^1.1.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "sharp": "^0.33.5",
    "tonweb": "^0.0.66",
    "tsx": "4.19.3",
    "znv": "0.4.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@types/node": "22.13.10",
    "eslint": "^9",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "tsc-watch": "6.2.1",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  }
}
