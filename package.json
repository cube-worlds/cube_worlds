{
    "name": "cubeworlds",
    "type": "module",
    "version": "0.3.0",
    "private": true,
    "description": "Telegram bot for NFT",
    "imports": {
        "#root/*": "./build/src/*"
    },
    "author": "Vladimir Babin <vovababin@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "tunnel": "ngrok http --domain dominant-annually-lobster.ngrok-free.app 5173",
        "build:bot": "tsc --noEmit false",
        "build:frontend": "npm --prefix src/frontend run build",
        "build:all": "npm run build:bot && npm run build:frontend",
        "dev:bot": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
        "dev:frontend": "npm --prefix src/frontend run dev",
        "dev:all": "concurrently \"npm run dev:bot\" \"npm run dev:frontend\"",
        "update:bot": "npx npm-check-updates -u && npm install",
        "update:frontend": "cd src/frontend && npx npm-check-updates -u && npm install",
        "update:all": "npm run update:bot && npm run update:frontend",
        "prepare": "npx husky install",
        "lint": "eslint . --ignore-pattern .github/",
        "format": "eslint . --fix --ignore-pattern .github/",
        "start": "tsc && tsx ./src/main.ts",
        "start:force": "tsx ./src/main.ts",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@fastify/static": "^8.1.1",
        "@grammyjs/auto-chat-action": "0.1.1",
        "@grammyjs/auto-retry": "^2.0.2",
        "@grammyjs/hydrate": "1.4.1",
        "@grammyjs/i18n": "1.1.2",
        "@grammyjs/menu": "^1.3.0",
        "@grammyjs/parse-mode": "1.11.1",
        "@grammyjs/types": "3.20.0",
        "@pinata/sdk": "^2.1.0",
        "@telegram-apps/init-data-node": "^2.0.4",
        "@ton/core": "^0.60.1",
        "@ton/crypto": "^3.3.0",
        "@ton/ton": "^15.2.1",
        "@tonconnect/sdk": "^3.1.0",
        "@typegoose/typegoose": "^12.14.0",
        "@types/node-rsa": "^1.1.4",
        "axios": "^1.9.0",
        "callback-data": "1.1.1",
        "chatgpt": "^5.2.5",
        "dotenv": "16.5.0",
        "fastify": "5.3.2",
        "form-data": "^4.0.2",
        "grammy": "1.36.1",
        "grammy-guard": "0.5.0",
        "iso-639-1": "3.1.5",
        "markdown-table-ts": "^1.0.3",
        "mongoose": "~8.13.3",
        "node-fetch": "^3.3.2",
        "node-graceful-shutdown": "1.1.5",
        "node-rsa": "^1.1.1",
        "pino": "9.6.0",
        "pino-pretty": "13.0.0",
        "sharp": "^0.34.1",
        "tonweb": "^0.0.66",
        "tsx": "4.19.3",
        "znv": "0.5.0",
        "zod": "3.24.3"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.12.0",
        "@types/node": "22.15.2",
        "concurrently": "^9.1.2",
        "eslint": "^9",
        "husky": "9.1.7",
        "lint-staged": "15.5.1",
        "prettier": "3.5.3",
        "prettier-plugin-organize-imports": "4.1.0",
        "tsc-watch": "6.2.1",
        "typescript": "5.8.3"
    },
    "lint-staged": {
        "*.ts": "npm run lint"
    }
}
